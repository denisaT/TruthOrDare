<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.denisatrif.truthdare">

    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:name=".App"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher_truthdare"
        android:label="@string/app_name"
        android:configChanges="locale|layoutDirection"
        android:roundIcon="@mipmap/ic_launcher_truthdare"
        android:supportsRtl="true"
        android:theme="@style/Theme.TruthOrDare">
        <activity
            android:name=".screens.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.TruthOrDare.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>