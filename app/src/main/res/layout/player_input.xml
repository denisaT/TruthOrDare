<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="player"
            type="com.denisatrif.truthdare.db.model.Player" />

        <variable
            name="callback"
            type="com.denisatrif.truthdare.screens.PlayersFragment.Callback" />
    </data>


    <LinearLayout
        android:id="@+id/player_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="14">

        <ImageButton
            android:id="@+id/female_icon"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:alpha="0.8"
            android:onClick="@{() -> callback.toggleGender(true)}"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_female" />

        <ImageButton
            android:id="@+id/male_icon"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:alpha="0.8"
            android:onClick="@{() -> callback.toggleGender(false)}"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_male" />

        <EditText
            android:id="@+id/player_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:fontFamily="@font/quicksand_light"
            android:text="@{player.name}"
            android:hint="@string/player_hint"
            android:backgroundTint="@color/primary_color"
            android:textColor="@color/primary_color"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/delete_name_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:layout_marginEnd="8dp"
            android:alpha="0.8"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_clear" />
    </LinearLayout>
</layout>